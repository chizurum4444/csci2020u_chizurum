<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<GridPane fx:controller="sample.client"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">

    <Label text="Username:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
    <TextField id="username" promptText="Enter username" fx:id="username" GridPane.columnIndex="1" GridPane.rowIndex="0" />

    <Label text="Message:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <TextField id="message" promptText="Enter your message" fx:id="message" GridPane.columnIndex="1" GridPane.rowIndex="1" />

    <Button id="sendBtn" fx:id="sendBtn" onAction="#buttonPress" text="Send" GridPane.columnIndex="0" GridPane.rowIndex="2" />
    <Button id="exitBtn" fx:id="exitBtn" onAction="#buttonPress2" text="Exit" GridPane.columnIndex="0" GridPane.rowIndex="3" />


</GridPane>